{
  "info": {
    "name": "SaveUp - Advanced Features",
    "description": "API collection for advanced features: Reminders, Notifications, Analytics, Receipt OCR",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Reminders",
      "item": [
        {
          "name": "Create Reminder",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Pay Credit Card Bill\",\n  \"message\": \"Credit card payment due\",\n  \"reminderDate\": \"2024-01-15T10:00:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reminders",
              "host": ["{{base_url}}"],
              "path": ["api", "reminders"]
            }
          }
        },
        {
          "name": "Get All Reminders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reminders",
              "host": ["{{base_url}}"],
              "path": ["api", "reminders"]
            }
          }
        },
        {
          "name": "Update Reminder",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"message\": \"Updated message\",\n  \"reminderDate\": \"2024-01-16T10:00:00\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/reminders/1",
              "host": ["{{base_url}}"],
              "path": ["api", "reminders", "1"]
            }
          }
        },
        {
          "name": "Delete Reminder",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/reminders/1",
              "host": ["{{base_url}}"],
              "path": ["api", "reminders", "1"]
            }
          }
        }
      ]
    },
    {
